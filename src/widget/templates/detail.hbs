{{#if isCarouselSwitched}}
<div class="row">
    <div class="col-xs-12">
        <div id="carouselView"></div>
        <div class="row-aligner map-details" style="padding: 10px; background-color: white;">
            <div class="detail-info">
                <div class="title">{{title}}</div>
                <div class="address">{{address}}</div>
            </div>
            <div id="distance-holder">
                {{#if distance }}<img class="arrow" src="./images/arrow.png"> <span
                    class="distance">{{distance}}</span>{{/if}}
            </div>
            {{#if isBookmarkingAllowed}}
            <div id="bookmarkBtn" class="glyphicon glyphicon-star"></div>
            {{/if}}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="map-holder">
            <div id="smallMap" style="height:100%;width:100%"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="buttonHolder">
                {{#if showContactButton}}
                <div class="buttonItem">
                    <button id="contactBtn">
                        {{contactBtnText}}
                    </button>
                </div>
                {{/if}}
                {{#if showDirectionsButton}}
                <div class="buttonItem">
                    <button id="directionsBtn">
                        {{dirBtnText}}
                    </button>
                </div>
                {{/if}}
            </div>
            <!-- <a href="">Directions-</a> -->
            <div class="description ql-editor">
                {{{description}}}
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="map-holder">
    <div id="smallMap" style="height:100%;width:100%"></div>
    <div class="row-aligner map-details">
        <div class="detail-info">
            <div class="title">{{title}}</div>
            <div class="address">{{address}}</div>
        </div>
        <div id="distance-holder">
            {{#if distance }}<img class="arrow" src="./images/arrow.png"> <span
                class="distance">{{distance}}</span>{{/if}}
        </div>
        {{#if isBookmarkingAllowed}}
        <div id="bookmarkBtn" class="glyphicon glyphicon-star"></div>
        {{/if}}
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div id="carouselView"></div>
        <div class="buttonHolder">
            {{#if showContactButton}}
            <div class="buttonItem">
                <button id="contactBtn">
                    {{contactBtnText}}
                </button>
            </div>
            {{/if}}
            {{#if showDirectionsButton}}
            <div class="buttonItem">
                <button id="directionsBtn">
                    {{dirBtnText}}
                </button>
            </div>
            {{/if}}
        </div>
        <!-- <a href="">Directions-</a> -->
        <div id="text" class="padded">
            {{{description}}}
        </div>
    </div>
</div>
{{/if}}
{{#if categories.length}}
<div class="row">
    <div class="col-xs-12">
        <div class="categories">
            Categories: {{categories}}
        </div>
    </div>
</div>
{{/if}}